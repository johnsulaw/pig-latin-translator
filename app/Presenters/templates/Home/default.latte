{block content}
	<h3 class="text-black-80 text-center mt-4 mb-3">Simple Pig Latin translator</h3>

	<div class="d-flex justify-content-center">
		<div class="mr-auto">
			{control pigLatinForm}
		</div>
	</div>

	<div class="d-flex justify-content-center mt-4">
		{ifset $translatedText}
			<p>Translated Text: {$translatedText}</p>
		{/ifset}
	</div>
{/block}